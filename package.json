{
  "name": "zoomer",
  "displayName": "Zoomer",
  "description": "Finely tune your zoom levels to get the perfectly sized text",
  "version": "0.3.1",
  "publisher": "anthonyattard",
  "engines": {
    "vscode": "^1.73.0"
  },
  "activationEvents": [
    "onCommand:zoomer.zoomIns",
    "onCommand:zoomer.zoomOuts"
  ],
  "keywords": [
    "zoom",
    "text size",
    "font",
    "productivity"
  ],
  "categories": [
    "Linters",
    "Formatters",
    "Other"
  ],
  "license": "MIT",
  "homepage": "https://github.com/anthonyattard/zoomer",
  "bugs": {
    "url": "https://github.com/anthonyattard/zoomer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonyattard/zoomer"
  },
  "main": "./out/extension.js",
  "qna": "https://github.com/anthonyattard/zoomer/discussions/categories/q-a",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "icon": "img/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "contributes": {
    "commands": [
      {
        "command": "zoomer.zoomIns",
        "title": "zoomer.zoomIns"
      },
      {
        "command": "zoomer.zoomOuts",
        "title": "zoomer.zoomOuts"
      }
    ],
    "keybindings": [
      {
        "command": "zoomer.zoomIns",
        "key": "ctrl+=",
        "mac": "cmd+="
      },
      {
        "command": "zoomer.zoomOuts",
        "key": "ctrl+-",
        "mac": "cmd+-"
      }
    ],
    "configuration": {
      "properties": {
        "zoomer.zoomIncrement": {
          "type": "number",
          "default": 0.1,
          "description": "Zoom level value when incrementing/decrementing (can accept decimals)"
        }
      },
      "title": "Zoomer Zoom Settings"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.11.9",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.19.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "vscode-test": "^1.4.1"
  }
}
